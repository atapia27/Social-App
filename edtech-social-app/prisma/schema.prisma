datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Video {
  id          String    @id @default(cuid())
  user_id     String
  description String
  video_url   String
  title       String
  comments    Comment[]
}

model Comment {
  id       String @id @default(cuid())
  video    Video  @relation(fields: [video_id], references: [id])
  video_id String
  content  String
  user_id  String
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  username String    @unique
  icon    String
}